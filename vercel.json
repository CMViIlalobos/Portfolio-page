{
    "version": 2,
    "framework": null,
    "outputDirectory": ".",
    "functions": {
        "api/index.php": { "runtime": "vercel-php@0.9.0" }
    },
    "routes": [
        {
            "src": "/build/(.*)",
            "dest": "/public/build/$1"
        },
        {
            "src": "/(favicon\\.ico|robots\\.txt)",
            "dest": "/public/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_KEY": "base64:aGKWx2bdGnGL8z8bOAle3xcUBS/DNPE0zAXdhcBTCJo=",
        "APP_URL": "https://${VERCEL_URL}",
        "ASSET_URL": "https://${VERCEL_URL}",
        "DB_CONNECTION": "sqlite",
        "DB_DATABASE": ":memory:",
        "LOG_CHANNEL": "stderr"
    }
}
